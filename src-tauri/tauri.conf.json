{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "agenda",
  "version": "0.1.0",
  "identifier": "com.agenda.dev",
  "build": {
    "frontendDist": "../apps/frontend/dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn start:frontend",
    "beforeBuildCommand": "cd apps/frontend && yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "agenda",
        "width": 960,
        "height": 1440,
        "maximized": false,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true,
        "skipTaskbar": false
      }
    ],
    "withGlobalTauri": false,
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost http://tauri.localhost https://cdn.tldraw.com https://storage.googleapis.com",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "font-src-elem": [
          "https://fonts.gstatic.com",
          "https://cdn.tldraw.com",
          "'self'"
        ],
        "font-src": [
          "https://fonts.gstatic.com",
          "https://cdn.tldraw.com",
          "'self'"
        ],
        "img-src": "'self' asset: http://asset.localhost http://tauri.localhost blob: data: https://cdn.tldraw.com",
        "script-src": "'self' 'unsafe-eval'"
      }
    }
  },
  "bundle": {
    "externalBin": [
      "../apps/go_backend/agenda_go_backend"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}